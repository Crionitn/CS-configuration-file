	// }
	"Print to Terminal": {
		"prefix": "Cout",
		"body": [
			"Console.WriteLine($1);",
			"$2"
		],
		"description": "Log output to console"
	},
	"Read from Terminal": {
		"prefix": "Cin",
		"body": [
			"Console.ReadLine();",
			"$2"
		],
		"description": "Read inputs from console"
	},
    "fori": {
        "prefix": "fori",
        "body": [
            "for(int ${1:a} = 0; ${1} < ${2:array.Length}; ${1}++) {",
            "\t$0",
            "}"
        ],
        "description": "for loop with index"
    }